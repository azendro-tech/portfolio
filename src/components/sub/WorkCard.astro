---
const { position, name, startDate, endDate, summary, highlights, url } = Astro.props;

import { formatDateRange, } from "../../utils/helpers";

const isCurrentPosition = !endDate;
---
<a href={url || "javascript:void(0)"} target={url ? "_blank" : undefined} rel={url ? "noopener noreferrer" : undefined}>
  <div class="relative flex text-black dark:text-white shadow-sm border border-black dark:border-white rounded-xl overflow-hidden hover:shadow-xl">
    
    <!-- Left Content Section -->
    <div class="flex-1 p-6">
      {isCurrentPosition && (
        <div class="mb-4 inline-block rounded-full bg-cyan-600 py-1 px-3 border border-transparent text-xs text-white transition-all shadow-sm">
          ACTUAL
        </div>
      )}
      
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <h3 class="text-2xl font-semibold text-black dark:text-white transition-colors mb-2">
            {position}
          </h3>
          <div class="flex items-center mb-3">
            <h4 class="text-lg font-medium text-black dark:text-white">
              {name}
            </h4>
            {url && (
              <svg class="w-4 h-4 ml-2 text-black dark:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            )}
          </div>
        </div>
      </div>

      {summary && (
        <p class="text-black dark:text-white leading-relaxed font-light mb-4 text-base">
          {summary}
        </p>
      )}

      {highlights && highlights.length > 0 && (
        <div class="mb-4">
          <h4 class="text-sm font-semibold text-black dark:text-white mb-3 uppercase tracking-wide">
            Logros destacados
          </h4>
          <ul class="grid grid-cols-1 gap-2">
            {highlights.map((highlight) => (
              <li class="flex items-start space-x-3 text-sm text-black dark:text-white">
                <div class="w-2 h-2 bg-black dark:bg-white rounded-full mt-2 flex-shrink-0"></div>
                <span class="leading-relaxed">{highlight}</span>
              </li>
            ))}
          </ul>
        </div>
      )}
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 bg-black rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <div class="flex flex-col ml-4">
          <span class="text-black dark:text-white font-bold text-sm uppercase tracking-wide">
            ---------
          </span>
          <span class="text-black dark:text-white font-medium">
            {formatDateRange(startDate, endDate)}
          </span>
        </div>
      </div>
    </div>

  </div>
</a>
