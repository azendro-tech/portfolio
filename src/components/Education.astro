---
import EducatonCard from './sub/EducationCard.astro';
const education = Astro.props.education;

---
<div class="">
  <button onclick="toggleAccordion(3)" class="w-full flex justify-between items-center py-5 text-black dark:text-white">
    <span class="text-2xl font-bold">Educacion</span>
      <span>
          <svg id="icon-svg-3" xmlns="http://www.w3.org/2000/svg"
            class="w-4 h-4 transition-transform duration-300"
            fill="currentColor" viewBox="0 0 16 16">
            <path fill-rule="evenodd"
              d="M11.78 9.78a.75.75 0 0 1-1.06 0L8 7.06 5.28 9.78a.75.75 0 0 1-1.06-1.06l3.25-3.25a.75.75 0 0 1 1.06 0l3.25 3.25a.75.75 0 0 1 0 1.06Z"
              clip-rule="evenodd" />
          </svg>
        </span>
      </button>
      <div id="content-3" class="accordion-content max-h-0 overflow-hidden transition-all duration-300 ease-in-out">
        <div class="pb-5 text-sm text-dark dark:text-white flex flex-col gap-4">
            {
        
              education.map(edu => (
                 <EducatonCard institution={edu.institution} url={edu.url} area={edu.area} studyType={edu.studyType} startDate={edu.startDate} endDate={edu.endDate} score={edu.score} courses={edu.courses}/>

        ))
      }
        </div>

      </div>
    </div>

 
